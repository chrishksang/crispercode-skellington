{
    "name": "crispercode/skeleton",
    "description": "Skeleton application using the CrisperCode Framework",
    "type": "project",
    "license": "MIT",
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:chrishksang/crispercode-framework.git"
        }
    ],
    "require": {
        "php": "^8.4",
        "crispercode/framework": "^0.1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "phpunit/php-code-coverage": "^11.0",
        "phpstan/phpstan": "^2.1",
        "rector/rector": "^2.2",
        "squizlabs/php_codesniffer": "^3.10"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/app"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "scripts": {
        "post-create-project-cmd": [
            "@php -r \"copy('.env.default', '.env');\"",
            "@php -r \"echo '\\n*** Project created! ***\\n';\"",
            "@php -r \"echo 'Next steps:\\n';\"",
            "@php -r \"echo '1. Edit .env file with your configuration\\n';\"",
            "@php -r \"echo '2. Run: docker compose up -d\\n';\"",
            "@php -r \"echo '3. Visit http://localhost:8080\\n\\n';\""
        ],
        "rector": "rector process --dry-run --config=rector.php",
        "rector:fix": "rector process --config=rector.php",
        "phpcs": "phpcs --standard=phpcs.xml",
        "phpcbf": "phpcbf --standard=phpcs.xml"
    },
    "config": {
        "github-protocols": [
            "https"
        ]
    },
    "minimum-stability": "stable"
}
